    i
}

i


if i < 10 {
    println("yes it is")
} else if (i < 20) {
    println("yes it is less than 20")
} else {
    
}

switch i {
    case 1, 2, 3:
        println("it was low")
    case 8:
        println("it was 8")
    default:
        println("it was none of above")
}

////////

let count = 3_000_000 // = 3000000

switch count {
    case 1, 2, 3:
        println("it was low")
    case 2_000_000...4_000_000:
        println("it was between")
    default:
        println("it was none of above")
}

////////

let somePoint1 = (1,1)

switch somePoint1 {
    case (0,0):
        println("at the origin")
    case (_, 0):
        println("anyone value and 0")
    case (-2...2, -2...2):
        println("between these values")
    default:
        println("it was none of above")
}

///////

let somePoint2 = (6,0)

switch somePoint2 {
    case (let x,0) where x != 2:
        println("at the origin \(x)")
        fallthrough // find another match
    case (_, 0):
        println("anyone value and 0")
    case (-2...2, -2...2):
        println("between -2 and 2")
    default:
        println("it was none of above")
}

///////

let somePoint3 = (2,0)

mainLoop: for i = 0; i < 10; i++ {
    if i == 2 {
        continue
    }
    
    mainSwitch: switch somePoint3 {
    case (2,0):
        println("at the origin")
        break mainLoop
    case (_, 0):
        println("anyone value and 0")
    case (-2...2, -2...2):
        println("between these values")
    default:
        println("it was none of above")
    }
    
}


